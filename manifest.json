{
  "manifest_version": 3,
  "name": "Price tracker",
  "version": "1.0",
  "permissions": ["activeTab", "storage", "tabs","identity"],
  "host_permissions": ["https://www.flipkart.com/*"],
  "oauth2": {
    "client_id": "890215618618-qlndh6883v1l7l4n6qfqih38ps3o6m03.apps.googleusercontent.com",
    "scopes": ["https://www.googleapis.com/auth/userinfo.email"]
  },
  "background": {
    "service_worker": "background.js"
  },
  "content_scripts": [
    {
      "matches": ["*://www.flipkart.com/*/p/*"],
      "js": ["content.js"],
      "css": ["content.css"]
    }
  ],
  "action": {
    "default_title": "Price Tracker",
    "default_popup": "popup.html"
  }
}
